<!DOCTYPE html>
<html>
<head>
  <title>TslRails</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <script type="text/javascript" src="/wmd/showdown.js"></script>
  <link rel="stylesheet" type="text/css" href="/wmd/wmd.css" />
  <%= csrf_meta_tag %>
</head>
<body>
	
	<% flash.each do |k, v| %>
		<p><strong><%= k.to_s.capitalize %>:</strong> <%= v %></p>
	<% end %>
	
	<% if current_user %>
		<p>
			Currently logged in as <%= current_user %>.
			<%= link_to "Logout", workflow_logout_path %>
		</p>
	<% end %>

<%= yield %>

</body>
</html>
