<% content_for :header do %>
  <h1>Publish article online</h1>
<% end %>

<%= form_for [:workflow, @article], :url => workflow_article_publish_path(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being published:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	  <%= f.label :title, "Title" %>
	  <%= collection_select :article, :title,
   	    @article.workflow.proposed_titles, :to_s, :to_s %>
	</div>
	<div class="field">
    <%= f.label :published_at %>
    <%= datetime_select :article, :published_at %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
