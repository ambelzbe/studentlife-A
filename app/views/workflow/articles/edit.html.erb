<header>
  <h1>Editing article</h1>
  <div style="clear: both"></div>
</header>

<div id="content">
<%= form_for(@article, :url => workflow_article_path(@article)) do |f| %>
	<% if @article.errors.any? %>
		<div id="errorExplanation">
			<h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :status_message %>
		<%= f.text_field :status_message %>
	</div>
	<% if @workflow_statuses %>
  	<div class="field">
  		<%= f.label :workflow_status %>
  		<%= collection_select :article, :workflow_status_id, @workflow_statuses, :id, :name %>
  	</div>
	<% end %>
	<div class="field">
	  <%= f.label :subsection %>
	  <%= collection_select :article, :subsection_id, @subsections, :id, :full_name, :include_blank => "(none)" %>
  </div>
  <% if current_staff_member.can_override_workflow %>
  	<div class="field">
      <%= f.label :open_to_author %>
      <%= f.check_box :open_to_author %>
    </div>
    <div class="field">
      <%= f.label :publishable %>
      <%= f.check_box :publishable %>
    </div>
  <% end %>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>

<%= link_to 'Back', workflow_article_path(@article) %>
</div>