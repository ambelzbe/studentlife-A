<h1>Listing users</h1>

<table>
  <tr>
    <th style="text-align: left;">Role</td>
    <th style="text-align: left;">Email</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td style="font-variant: small-caps; text-transform: lowercase; font-weight: bold;">
      <% if user.is_admin %>
        Admin
      <% elsif not user.sections.empty? %>
        Editor: <%= user.sections.map(&:to_s).join(", ") %>
      <% else %>
        Staff
      <% end %>
    </td>
    <td><%= user.email %></td>
    <td><%= link_to 'Edit', edit_workflow_user_path(user) %></td>
    <td>
      <% form_tag (reset_workflow_user_path(user), :style => "display: inline;") do %>
	      <%= hidden_field_tag :user_id, user.id%>
	      <%= submit_tag ("Reset password") %>
	    <% end %>
	  </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_workflow_user_path %>
