<header>
  <h1>Sections</h1>
  
  <span class="actions">
    <%= link_to 'New Section', new_workflow_section_path %>
  </span>
  <div style="clear: both;"></div>
</header>

<div id="content">
<% @sections.each do |section| %>
    <article>
      <div class="left">
        <p style="margin-top: 0; text-align: center; line-height:18px; padding-top: 8px; font-weight: bold; text-transform: uppercase; letter-spacing: 0px">P<%= section.priority %></p>
      </div>
      <div class="mid">
      <header>
        <h1 style="line-height: 1em; margin: 0; display: inline;"><%= section %></h1>
        <span style="color: #666; margin-top: 0;">
        </span>
      </header>
      <p style="margin-top: 0.5em; margin-bottom: 0; line-height: 1.5em; color: #666">
        Editors:
        <%= link_to 'Add editor', new_workflow_section_editor_path(section) %>
      </p>
      <ul>
        <% section.editors.each do |editor| %>
          <li>
            <span class="change"><%= editor %></span>
            <%= link_to 'Remove', workflow_section_editor_path(section, editor),
              :confirm => 'Are you sure?', :method => :delete %>
          </li>
        <% end %>
      </ul>
      <p style="color: #666;">
        Subsections:
        <%= link_to 'Add subsection', new_workflow_section_subsection_path(section) %>
      </p>
      <ul>
        <% section.subsections.each do |subsection| %>
          <li style="line-height: 1.5em">
            P<%= subsection.priority %>
            <span class="change"><%= subsection %></span>
            <%= link_to 'Edit', edit_workflow_section_subsection_path(section, subsection) %>
            <%= link_to 'Remove', workflow_section_subsection_path(section, subsection),
              :confirm => 'Are you sure?', :method => :delete %>
          </li>
        <% end %>
      </ul>
      </div>
      <div class="right">
        <%= link_to 'Edit', edit_workflow_section_path(section) %>
        <%= link_to 'Destroy', workflow_section_path(section), :confirm => 'Are you sure?', :method => :delete %>
      </div>
      <div style="clear: both;"></div>
    </article>
<% end %>
</div>