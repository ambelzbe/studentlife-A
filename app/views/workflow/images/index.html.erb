<h1>Listing images</h1>

<table>
  <tr>
    <th>Published?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td>
      <% if image.published_online %>Online<% end %>
      <% if image.published_in_print %>In-print<% end %>
    </td>
    <td><%= link_to image_tag(image.file.url(:thumb)), workflow_article_image_path(@article, image) %></td>
    <td><%= image.credit %></td>
    <td><%= link_to 'Edit', edit_workflow_article_image_path(@article, image) %></td>
    <td><%= link_to 'Destroy', workflow_article_image_path(@article, image), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Image', new_workflow_article_image_path(@article) %>
