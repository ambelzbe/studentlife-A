<h1>Listing issues</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.name %></td>
    <td><%= link_to 'Show', [:workflow, issue] %></td>
    <td><%= link_to 'Edit', edit_workflow_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', [:workflow, issue], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

