<%= form_for(@user, :url => "/users/login") do |f| %>
  <h3>Login</h3>  

  <% if flash[:warning] %>
    <div id="error_explanation">
      <p><%= flash[:warning] %></p>
    </div>
  <% end %>

  <div class="field">
  	<%= f.label :username %><br />
  	<%= f.text_field :username %>
  </div>
  
  <div class="field">
  	<%= f.label :password %><br />
  	<%= f.text_field :password %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
